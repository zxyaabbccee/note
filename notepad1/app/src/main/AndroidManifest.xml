<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notepad">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Android 10+ 存储权限适配 -->
    <application
        android:name=".NoteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:requestLegacyExternalStorage="true"> <!-- 适配Android 10存储 -->
        
        <!-- 内容提供者声明（必须配置authorities） -->
        <provider
            android:name=".NotePadProvider"
            android:authorities="com.example.notepad.NotePadProvider"
            android:exported="false" /> <!-- 不对外暴露 -->

        <!-- 列表界面（启动页） -->
        <activity android:name=".NoteList"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 编辑界面 -->
        <activity android:name=".NoteEditor"
            android:exported="false"
            android:parentActivityName=".NoteList"> <!-- 返回父界面 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NoteList" />
        </activity>
    </application>

</manifest>