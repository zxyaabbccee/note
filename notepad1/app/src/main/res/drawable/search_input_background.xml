<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角半径 -->
    <corners android:radius="8dp" />
    
    <!-- 边框宽度和颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/divider" />
    
    <!-- 背景颜色 -->
    <solid android:color="@color/white" />
    
    <!-- 内边距 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>